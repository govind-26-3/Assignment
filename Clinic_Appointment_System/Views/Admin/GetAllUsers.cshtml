@model IEnumerable<Clinic_Appointment_System.Models.User>

@{
    ViewData["Title"] = "All Users";
}

<h2>Manage Users</h2>

<p>
    <a asp-controller="Doctor" asp-action="GetAllDoctors" class="btn btn-primary">Click here to see All Doctors</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>