 
@model IEnumerable<Clinic_Appointment_System.Models.Appointment>

@{
    ViewData["Title"] = "GetAllAppointments";
}
<h1>All Appointments</h1>

<p> 
    <a asp-action="AddAppointment" class="btn btn-primary">Create New Appointment</a>
</p>
@if (!Model.Any()) 
{   
    <tr>
        <td colspan="5" class="text-center text-danger">No appointment booked!!</td>
    </tr>
}
else{

<table class="table">
    <thead>

        <tr>
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.Patient) *@
            @* </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.Patient.FirstName) *@
            @* </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    <a asp-action="EditAppointmentStatus" asp-route-id="@item.AppointmentId" class="btn btn-warning">Edit Status</a> |
                    @* <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-primary">Details</a> | *@
                    <a asp-action="DeleteAppointment" asp-route-id="@item.AppointmentId" class="btn btn-danger">Cancel Appointment</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
