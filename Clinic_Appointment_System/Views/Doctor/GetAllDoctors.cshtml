@model IEnumerable<Clinic_Appointment_System.Models.Doctor>

@{
	ViewData["Title"] = "GetAllDoctors";
}

<h1>GetAllDoctors</h1>


<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Speciality)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Speciality)
				</td>
				<td>
					<a asp-action="UpdateDoctor" class="btn btn-warning" asp-route-id="@item.DoctorId">Edit</a> |

					<a asp-action="DeleteDoctor" class="btn btn-danger" asp-route-id="@item.DoctorId">Delete</a> |
					<a asp-action="GetAppointmentsByDoctor" class="btn btn-info" asp-route-id="@item.DoctorId">View Appointments</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<p>
	<a asp-action="AddDoctor" class="btn btn-primary">Add New Doctor</a>
</p>
